type Token.Kind {
    EOF
    Error
    Identifier
    Number
    String
    Plus
    Minus
}

type Token {
    kind   Token.Kind
    lexeme u8[]
}

type Lexer {
    source u8[:0]
    cursor u8
    line, col int
}

func new_lexer(source u8[:0]) Lexer {
    return Lexer {
        source: source,
        cursor: 0,
        line: 1,
        col: 1
    }
}

func main() int {
    source = "var x = 10 + 20"
    return 0
}